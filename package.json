{
  "name": "styleguide",
  "version": "1.0.0",
  "description": "Style Guide",
  "main": "index.js",
  "scripts": {
    "dev": "node_modules/.bin/nuxt",
    "build": "node_modules/.bin/nuxt build",
    "test": "node_modules/.bin/ava --verbose",
    "lint": "node_modules/.bin/eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "start": "HOST=0.0.0.0 PORT=3011 node_modules/.bin/nuxt start"
  },
  "dependencies": {
    "font-loading": "^1.0.3",
    "nuxt-edge": "^2.0.0-25609473.c77fa47",
    "nuxt-interpolation": "^0.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.5.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devoopshq/styleguide.git"
  },
  "keywords": [
    "styleguide"
  ],
  "author": "Dalibor Gogic <mail@daliborgogic.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devoopshq/styleguide/issues"
  },
  "homepage": "https://github.com/devoopshq/styleguide#readme",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-console": "error",
      "vue/max-attributes-per-line": "off"
    }
  }
}
